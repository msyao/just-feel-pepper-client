<!-- components/review-snippet/template.hbs -->
<hr>

{{#unless isEditable}}
  <div class="row">
    <div class="col-sm-3">{{review.post.title}}</div>
    <div class="col-sm-3">{{review.rating}}</div>
    <div class="col-sm-6">{{review.comment}}</div>
  </div>


{{else}}
<div class="row">
  <div class="col-sm-3">Pepper: {{review.post.title}}</div>
  <div class="col-sm-3">Rating: {{input value=review.rating}}</div>
  <div class="col-sm-6">Comment: {{input value=review.comment}}</div>
</div>
<div class="row">
  <button {{action 'updateReview'}} class="btn btn-default">EDIT</button>
  <button {{action 'destroyReview'}} class="btn btn-danger">DESTROY</button>
</div>
{{/unless}}
