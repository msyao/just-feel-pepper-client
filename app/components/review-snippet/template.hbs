<!-- components/review-snippet/template.hbs -->
<hr>
<div>
{{#unless isEditable}}
  <p> {{review.post.title}}</p>
  <p> {{review.rating}}</p>
  <p> {{review.comment}}</p>


{{else}}
  <p>Pepper: {{review.post.title}}</p>
  <p>Rating: {{input value=review.rating}}</p>
  <p>Comment: {{input value=review.comment}}</p>
  <button {{action 'updateReview'}} class="btn btn-default">EDIT</button>
  <button {{action 'destroyReview'}} class="btn btn-danger">DESTROY</button>
{{/unless}}
</div>
